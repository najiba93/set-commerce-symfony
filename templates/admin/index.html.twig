{% extends 'base.html.twig' %}

{% block title %}Admin - Tableau de bord
{% endblock %}

{% block main %}
	<div class="container py-4  ">
		<h2 class="mb-4">Tableau de bord Admin</h2>


		<div class="row g-4 mb-4">
			<div class="col-12 col-lg-6">
				<div class="card h-100">
					<div class="card-header fw-bold">Commandes clients</div>
					<div class="card-body">
						<ul class="list-group list-group-flush">
							{% for c in commandesClients %}
								<li class="list-group-item d-flex justify-content-between align-items-center">
									<span>ID: {{ c.user.id }} - {{ c.date|date('d/m/Y') }}</span>
									<span class="fw-semibold">{{ c.total }} €</span>
								</li>
							{% else %}
								<li class="list-group-item text-muted">Aucune commande</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>

			<div class="col-12 col-lg-6">
				<div class="card h-100">
					<div class="card-header fw-bold">Bénéfices par jour</div>
					<div class="card-body">
						<ul class="list-group list-group-flush">
							{% for b in benefices %}
								<li class="list-group-item d-flex justify-content-between align-items-center">
									<span>{{ b.date|date('d/m/Y') }}</span>
									<span class="fw-semibold">{{ b.benefice }} €</span>
								</li>
							{% else %}
								<li class="list-group-item text-muted">Aucune donnée</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</div>


		<div class="row g-4 mb-4">
			<div class="col-12">
				<div class="card">
					<div class="card-header fw-bold">Mes articles</div>
					<div class="card-body">
						<div class="row g-3">
							{% for article in mesArticles %}
								<div class="col-md-4 col-lg-3">
									<div class="card h-100">
										{% if article.images|length > 0 %}
											<img src="{{ asset(article.images|first.url) }}" alt="{{ article.nom }}" class="card-img-top" style="height: 200px; object-fit: cover;">
										{% else %}
											<div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
												<span class="text-muted">Aucune image</span>
											</div>
										{% endif %}
										<div class="card-body">
											<h6 class="card-title">{{ article.nom }}</h6>
											<p class="card-text text-primary fw-bold">{{ article.prix }}
												€</p>
										</div>
									</div>
								</div>
							{% else %}
								<div class="col-12">
									<p class="text-muted text-center">Aucun article</p>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
