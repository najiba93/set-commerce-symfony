{% extends 'base.html.twig' %}

{% block title %}{{ categorie.nom }} - Mode & Tendance{% endblock %}

{% block main %}
<div class="container mt-5 ">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mb-4">{{ categorie.nom }}</h1>
      
      {% if produits|length > 0 %}


        <div class="row ">
          {% for produit in produits %}

            <div class="col-md-4 col-lg-3 mb-4">

              <div class="card h-100 shadow-sm">
                {% if produit.images|length > 0 %}
                  <img src="{{ asset(produit.images[0].url) }}" 
                       class="card-img-top" 
                       alt="{{ produit.nom }}"
                       style="height: 200px; object-fit: cover;">
                {% else %}
                  <img src="https://via.placeholder.com/300x200?text=Image+non+disponible" 
                       class="card-img-top" 
                       alt="Image par défaut"
                       style="height: 200px; object-fit: cover;">
                {% endif %}
                
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">{{ produit.nom }}</h5>
                  <p class="card-text text-muted">{{ produit.description|slice(0, 100) }}...</p>
                  
                  <div class="mt-auto">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <span class="h5 text-primary mb-0">{{ produit.prix|number_format(2, ',', ' ') }} €</span>
                      <a href="{{ path('produits_carte', {id: produit.id}) }}" 
                         class="btn btn-outline-primary btn-sm">
                        Voir détails
                      </a>
                    </div>
                    
                    {% if produit.couleurs|length > 0 %}
                      <div class="mb-2">
                        <small class="text-muted">Couleurs : {{ produit.couleurs|join(', ') }}</small>
                      </div>
                    {% endif %}
                    
                    {% if produit.tailles|length > 0 %}
                      <div class="mb-2">
                        <small class="text-muted">Tailles : {{ produit.tailles|join(', ') }}</small>
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="text-center">
          <div class="alert alert-info">
            <h4>Aucun produit trouvé</h4>
            <p>Il n'y a actuellement aucun produit dans cette catégorie.</p>
            <a href="{{ path('Produits') }}" class="btn btn-primary">Voir tous les produits</a>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %} 