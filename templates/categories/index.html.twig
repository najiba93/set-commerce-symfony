{% extends 'base.html.twig' %}

{% block title %}Catégories - Mode & Tendance{% endblock %}

{% block main %}
<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mb-5">Nos Catégories</h1>
      
      <div class="row">
        {% for categorie in categories %}
          <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm text-center">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">{{ categorie.nom }}</h5>
                <p class="card-text text-muted">
                  Découvrez notre collection {{ categorie.nom|lower }}
                </p>
                
                <div class="mt-auto">
                  <a href="{{ path('categorie_produits', {id: categorie.id}) }}" 
                     class="btn btn-primary">
                    Voir les produits
                  </a>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
