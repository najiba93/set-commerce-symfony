{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }}{% endblock %}

{% block main %}
<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-6">
      {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('produit_modifier', {id: produit.id}) }}" class="d-inline-block position-relative">
          <div class="mb-4 text-center">
            {# Image principale affich√©e en grand #}
            <img id="mainImage" src="{{ asset(produit.images[0].url) }}" alt="{{ produit.nom }}" class="img-fluid" style="max-height:350px;">
          </div>
          <div class="d-flex justify-content-center gap-2">
            {# Les autres images en petit #}
            {% for image in produit.images|slice(1, 3) %}
              <img src="{{ asset(image.url) }}" alt="{{ produit.nom }}" class="img-thumbnail" style="max-width:80px; cursor:pointer;" onclick="document.getElementById('mainImage').src=this.src;">
            {% endfor %}
          </div>
          <span class="position-absolute top-0 end-0 bg-dark text-white px-2 py-1 small rounded-start">üñãÔ∏è</span>
        </a>
      {% else %}
        <div class="mb-4 text-center">
          <img id="mainImage" src="{{ asset(produit.images[0].url) }}" alt="{{ produit.nom }}" class="img-fluid" style="max-height:350px;">
        </div>
        <div class="d-flex justify-content-center gap-2">
          {% for image in produit.images|slice(0, 4) %}
            <img src="{{ asset(image.url) }}" alt="{{ produit.nom }}" class="img-thumbnail" style="max-width:80px; cursor:pointer;" onclick="document.getElementById('mainImage').src=this.src;">
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div class="col-md-6">
      <h1>
        {% if is_granted('ROLE_ADMIN') %}
          <a href="{{ path('produit_modifier', {id: produit.id}) }}" class="text-decoration-none text-dark">
            {{ produit.nom }}
          </a>
        {% else %}
          {{ produit.nom }}
        {% endif %}
      </h1>

      {% if produit.categorie %}
        <p class="text-muted">Cat√©gorie : {{ produit.categorie.nom }}</p>
      {% else %}
        <p class="text-muted text-danger">Cat√©gorie non d√©finie</p>
      {% endif %}

      <h4 class="text-primary">{{ produit.prix }} ‚Ç¨ TTC</h4>

      {% if produit.couleurs %}
        <label>Couleur :</label>
        <select class="form-select mb-2">
          {% for couleur in produit.couleurs %}
            <option>{{ couleur }}</option>
          {% endfor %}
        </select>
      {% endif %}

      {% if produit.tailles %}
        <label>Taille :</label>
        <select class="form-select mb-2">
          {% for taille in produit.tailles %}
            <option>{{ taille }}</option>
          {% endfor %}
        </select>
      {% endif %}

      <form method="post" action="{{ path('ajouter_au_panier', {id: produit.id}) }}">
        <label>Quantit√© :</label>
        <input type="number" name="quantite" value="1" min="1" class="form-control mb-3">
        <button type="submit" class="btn btn-dark w-100">Ajouter au panier</button>
      </form>

      <div class="mt-4 p-3 bg-light border rounded">
        <ul class="list-unstyled mb-0">
          <li>Livraison 24/48H en point relais </li>
          <li>Frais de port offerts d√®s 69‚Ç¨ en France et l‚ÄôUnion europ√©enne</li>
          <li>Paiement s√©curis√© CB / PayPal</li>
          <li>Satisfait ou rembours√©</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="mt-5">
    <h3>Description</h3>
    <p>{{ produit.description }}</p>
  </div>
</div>
{% endblock %}
